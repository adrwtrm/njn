<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/toggle_button_base"/>
            <item android:right="64dp">
                <shape android:shape="ring" android:useLevel="false" android:innerRadius="0dp" android:thickness="8dp">
                    <gradient android:startColor="#3f666666" android:endColor="#3f333333" android:angle="0" android:type="radial" android:gradientRadius="10"/>
                    <stroke android:width="1dp" android:color="#3f666666"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/toggle_button_base"/>
            <item android:right="64dp">
                <shape android:shape="ring" android:useLevel="false" android:innerRadius="0dp" android:thickness="8dp">
                    <gradient android:startColor="#3f00ff00" android:endColor="#3f006600" android:angle="0" android:type="radial" android:gradientRadius="10"/>
                    <stroke android:width="1dp" android:color="#3f666666"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
