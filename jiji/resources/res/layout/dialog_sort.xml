<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="16dp" layout="@layout/include_list_divider_gray"/>
        <RadioGroup android:id="@+id/Group_Display" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
            <RadioButton android:id="@+id/Sort_Ascend" android:paddingLeft="32dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="24dp" android:checked="true" android:text="@string/_InAscending_" android:layout_weight="1"/>
            <RadioButton android:id="@+id/Sort_Decend" android:paddingLeft="32dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="24dp" android:text="@string/_InDescending_" android:layout_weight="1"/>
        </RadioGroup>
        <include layout="@layout/include_list_divider_gray"/>
        <RadioGroup android:id="@+id/Group_Sort" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
            <RadioButton android:id="@+id/Sort_Name" android:paddingLeft="32dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="24dp" android:checked="true" android:text="@string/_NameOrder_" android:layout_weight="1"/>
            <RadioButton android:id="@+id/Sort_Date" android:paddingLeft="32dp" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="24dp" android:text="@string/_DateOrder_" android:layout_weight="1"/>
        </RadioGroup>
        <include layout="@layout/include_list_divider_gray"/>
    </LinearLayout>
</ScrollView>
