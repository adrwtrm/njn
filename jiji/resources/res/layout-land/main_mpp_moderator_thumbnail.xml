<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <include layout="@layout/toolbar_moderator"/>
            <LinearLayout android:orientation="horizontal" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
                <LinearLayout android:orientation="vertical" android:layout_width="1dp" android:layout_height="match_parent" android:layout_weight="3">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.epson.iprojection.ui.activities.moderator.DraggableButton android:id="@+id/btn_multictrl_me" android:layout_width="0dp" android:layout_height="36dp" android:layout_margin="@dimen/MultiButtonMargin" android:layout_weight="1"/>
                    </LinearLayout>
                    <com.epson.iprojection.ui.activities.moderator.thumbnail.MeasurableGridView android:id="@+id/grid_thumbnail" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:horizontalSpacing="@dimen/TumbSpacing" android:verticalSpacing="4dp" android:columnWidth="@dimen/MppThumbWidth" android:numColumns="auto_fit" android:layout_weight="9"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="1dp" android:layout_height="match_parent" android:layout_weight="7">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton android:id="@+id/btn_multictrl_meOnly" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/button_material_style_projection"/>
                        <ImageButton android:id="@+id/btn_multictrl_reload" android:background="@drawable/selector_pressed" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/MultiButtonMargin" android:src="@drawable/btn_moderator_reload" android:contentDescription="@string/_EmptyMessage_"/>
                        <com.epson.iprojection.ui.activities.moderator.ZoomButton android:id="@+id/btn_multictrl_scale" android:background="@drawable/selector_pressed" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/MultiButtonMargin" android:src="@drawable/mpp_zoomin"/>
                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                        <ImageButton android:id="@+id/btn_multictrl_mpp1" android:background="@drawable/selector_pressed" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="@dimen/MultiButtonMargin" android:src="@drawable/mpp_1_disable" android:contentDescription="@string/_EmptyMessage_"/>
                        <ImageButton android:id="@+id/btn_multictrl_mpp2" android:background="@drawable/selector_pressed" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="@dimen/MultiButtonMargin" android:src="@drawable/mpp_2_disable" android:contentDescription="@string/_EmptyMessage_"/>
                        <ImageButton android:id="@+id/btn_multictrl_mpp4" android:background="@drawable/selector_pressed" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="@dimen/MultiButtonMargin" android:layout_marginTop="@dimen/MultiButtonMargin" android:layout_marginRight="16dp" android:src="@drawable/mpp_4_disable" android:contentDescription="@string/_EmptyMessage_"/>
                    </LinearLayout>
                    <include layout="@layout/include_multiproj_divider"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <include layout="@layout/include_multiproj_divider_vertical"/>
                        <include android:id="@+id/mpp_window_LEFT_TOP" layout="@layout/include_mpp_img"/>
                        <include layout="@layout/include_multiproj_divider_vertical"/>
                        <include android:id="@+id/mpp_window_RIGHT_TOP" layout="@layout/include_mpp_img"/>
                    </LinearLayout>
                    <include layout="@layout/include_multiproj_divider"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <include layout="@layout/include_multiproj_divider_vertical"/>
                        <include android:id="@+id/mpp_window_LEFT_BTM" layout="@layout/include_mpp_img"/>
                        <include layout="@layout/include_multiproj_divider_vertical"/>
                        <include android:id="@+id/mpp_window_RIGHT_BTM" layout="@layout/include_mpp_img"/>
                    </LinearLayout>
                    <include layout="@layout/include_multiproj_divider"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/include_unpressable_after_command"/>
    </FrameLayout>
    <include layout="@layout/include_drawermenu"/>
</androidx.drawerlayout.widget.DrawerLayout>
